<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="/css/_default.css">
</head>
<body>
    <div class="main">
        <div>
            <nav class="navbar">
                <div class="contentLOGO">
                    <h2>EVENT_HUB</h2>
                    <h2>EVENT_HUB</h2>
                </div>
                <div class="nav-buttons">
                    <a href="/auth/login" class="btn login-button">Login / Signup <img src="images/google.png" class="google-image" alt=""></a>
                </div>
            </nav>
        </div>

        <div class="main_info">
            <% events.forEach((event, index) => { %>
                <div class="info">
                    <% if (index % 2 === 0) { %> <!-- Alternating layout based on index -->
                        <div class="pic">
                            <img src="<%= event.eventPoster %>" alt="<%= event.eventName %>" class="event_img">
                        </div>
                        <div class="content">
                            <h1 class="head_name"><%= event.eventName %></h1>
                            <p><%= event.description %></p>
                        </div>
                    <% } else { %>
                        <div class="content">
                            <h1 class="head_name"><%= event.eventName %></h1>
                            <p><%= event.description %></p>
                        </div>
                        <div class="pic">
                            <img src="<%= event.eventPoster %>" alt="<%= event.eventName %>" class="event_img">
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
